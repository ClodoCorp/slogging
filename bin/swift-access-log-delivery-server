from optparse import OptionParser

from slogging.access_log_delivery import AccessLogDeliveryDaemon
from swift.common.utils import parse_options, readconf


if __name__ == '__main__':
    parser = OptionParser('Usage: %prog CONFIG_FILE')
    parser.add_option('-o', '--once', action='store_true', dest='once',
                      default=False, help='Run daemon once')
    conf_file, options = parse_options(parser=parser)
    conf = readconf(conf_file, 'access-log-delivery')

    daemon = AccessLogDeliveryDaemon(conf)
    daemon.run(once=options['once'])
